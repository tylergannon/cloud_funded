.span3.shadow[project]{data: {'project-path' => project_path(project), fb_post_id: project.fb_post_id}}
  .projecteaser= image_tag project.image.url(:medium), width: '300px'
  %h2= project.name
  .description= project.tagline
  -# .website_link= link_to project.website_url.shorten(36), project.website_url if project.website_url
  
  .progress-bar
    .progress.progress-success
      .bar{style: "width: #{project.percent_complete}%;"}
  %h3 #{number_to_currency(project.amount_pledged)} raised.  
  .btn #{link_to 'Learn More & Pledge', new_project_pledge_path(project)}
