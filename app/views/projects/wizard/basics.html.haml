= render partial: 'application_header'
.project_wizard
  %h1 Company Basics
  = form_for @project, url: wizard_path do |f|
    .field
      = f.text_field :name, placeholder: "Your Company Name"
    .field
      = f.text_field :tagline, placeholder: 'Tagline / Catch Phrase'
    .field.upload_field{id: 'upload_image', data: {field: :image}}
      .upload_status Uploading...
      - if @project.image.present?
        = image_tag @project.image.url(:large), alt: 'Project Image', id: 'image_tag'
      - else
        = image_tag 'projects/wizard/onebit_33.png', alt: 'Project Image', id: 'image_tag', class: 'hidden'
      = image_tag 'projects/wizard/file_upload_placeholder.jpg', alt: 'Image Placeholder', id: 'image_placeholder_tag', class: "click_to_upload#{@project.image.present? ? ' hidden' : ''}"
      = image_tag 'projects/wizard/change_file_placeholder.jpg', alt: 'Change Image', id: 'change_image_tag', class: "click_to_upload#{@project.image.present? ? '' : ' hidden'}"
    .field
      = f.collection_select :category_id, Projects::Category.all, :id, :name, prompt: "What kind of company is it?"
    

    .field
      = f.text_area :short_description, placeholder: 'A brief description of your company'
    .field.financial_goal
      = f.label :financial_goal
      = f.text_field :financial_goal
    .field
      = f.submit 'Save and Continue'
  .file_uploads{data: {action: project_path(@project, format: :json)}}
    = file_field_tag :image
