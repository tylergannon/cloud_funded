%p#notice= notice

.project.rounded.shadow{'data-project-path' => project_path(@project)}
  %h2= @project.name
  = image_tag @project.image.url(:medium), width: '280px'
  .description= @project.description
  .website_link
    = link_to @project.website_url, @project.website_url
  .progress{'data-percent-complete' => @project.percent_complete}
  %h3 #{number_to_currency(@project.amount_pledged)} raised
  - if @project.owner == current_member
    %p= link_to 'Edit your project', edit_project_path(@project)

- unless @project.youtube_url.blank?
  .youtube
    %iframe{width: '560', height: '315', frameborder: '0', allowfullscreen: true, src: @project.youtube_url}

.already_pledged
  %h1 Who's already pledged:
  - @project.pledges.map(&:investor).each do |investor|
    = link_to investor.profile do
      = image_tag investor.profile_pic
    
  - if @project.pledges.empty?
    %h2 No one has pledged yet. Be the first!
  = link_to new_project_pledge_path(@project) do
    %h2 Pledge Your Support!


.clear
.share
  %a{name: 'fb_share'}
.like
  .fb-like{'data-href' => project_url(@project), 'data-send' => true, 'data-width' => '450', 'data-show-faces' => true}
.clear
= content_for :head do
  %link{rel: 'image_src', href: @project.image.url(:original, false)}
  %meta{property: 'fb:app_id', content: facebook_app_id}
  %meta{property: 'og:type', content: 'article'}
  %meta{property: 'og:title', content: "#{@project.name} on CloudFunded"}
  %meta{property: 'og:image', content: @project.image.url(:original, false)}
  %meta{property: 'og:description', content: @project.description}
  %meta{property: 'og:url', content: project_url(@project)}
