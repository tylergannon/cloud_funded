= form_for [:admin, @page] do |f|
  -if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :slug, "Url for page"
    = f.text_field :slug
  .field
    = f.label :description, 'Abstract for FB sharing'
    = f.text_area :description
  .actions
    = f.submit 'Save'
