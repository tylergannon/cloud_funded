.navbar.navbar-fixed-top.header
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .row-fluid
        .span3
          %a.brand{href: root_path} &nbsp;
        .span6.offset3
          .container.nav-collapse
            %ul.nav.nav-pills
              %li.dropdown.project_categories
                %a.dropdown-toggle{href: '#', data: {toggle: :dropdown}}
                  Invest
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'All Companies', projects_path
                  - Projects::Category.all.each do |category|
                    %li= link_to category.name, projects_category_path(category)
              %li= link_to 'Get Funded', get_funded_path
              %li= link_to 'Feedback', submit_feedback_path(about_page: request.path)
              %li= link_to 'Blog', blog_path
              %li.dropdown
                %a.droptown-toggle{href: '#', data: {toggle: :dropdown}}
                  About Us
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'Our Company', '/about'
                  %li= link_to 'How It Works', how_it_works_path
              %li.dropdown
                %a.droptown-toggle{href: '#', data: {toggle: :dropdown}}
                  My Account
                  = image_tag current_member.profile_pic, height: 24 if member_signed_in?
                  %b.caret
                %ul.dropdown-menu
                  - unless member_signed_in?
                    %li
                      = link_to new_member_session_path do
                        %i.icon.icon-user
                        Sign In
                    %li
                      = link_to new_member_registration_path do
                        %i.icon.icon-star
                        Sign Up
                    %li
                      = link_to member_omniauth_authorize_path(:twitter) do
                        %i.icon= image_tag 'icons/dark/16px/16_twitter.png'
                        Sign In With Twitter
                    %li
                      = link_to member_omniauth_authorize_path(:facebook) do
                        = image_tag 'icons/dark/16px/16_facebook.png', :class => 'fb_sign_in'
                        = 'Sign In With Facebook'
                  - else
                    %li= link_to 'My Profile', profile_path(current_member)
                    %li= link_to 'My Account', account_path
                    %li= link_to 'My Projects', my_projects_path
                    %li= link_to 'Change Password', change_password_path
                    %li= link_to 'Sign out', destroy_member_session_path, method: 'delete'
                    - if current_member.admin
                      %li.nav-header Admin Controls
                      %li= link_to 'Members', admin_members_path
                      %li= link_to 'Pages', admin_pages_path
                      %li= link_to 'Projects', admin_projects_path
                      %li= link_to 'Feedback', admin_feedbacks_path
                      %li= link_to 'Blog Articles', admin_articles_path
                      %li= link_to 'Categories', admin_projects_categories_path
