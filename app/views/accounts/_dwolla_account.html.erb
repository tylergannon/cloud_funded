
<% if current_member.dwolla_id.blank? %>
  <p>You have not linked a dwolla account to CloudFunded.</p>
  <%= render partial: 'dwolla/link_dwolla'%>
<% else %>
  <p>
    You have linked to Dwolla account <%= current_member.dwolla_id %>.
    <%= link_to "Unlink your Account", account_path(member: {dwolla_id: nil, dwolla_auth_token: nil}), method: :put, data: {confirm: 'Are you sure you want to unlink your Dwolla account?'} %>
  </p>  
<% end %>

